<div class="container">
    <div class="col-9">

        <div class="card">
            <div class="top">
             
                <div class="userDetails">
                
                    <div>
                        <div class="profilepic">
                            <div class="profile_img">
                                <div class="image">
                                    <img src="/static/images/ball.jpg" alt="img8">
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3>

                        <p>
                          
                            {{photo.owner.username}}
                        </p>
                    
                        <span>{{photo.location}}</span>

                        {{#if photo.isOwner}}
                        <div class="edit-delete-btns">
                           
                            <a href="/photo/{{photo._id}}/edit">
                                <img class="edit-img" src="/static/images/edit.png" alt="edit button">
                            </a>
                         
                            <a href="/photo/{{photo._id}}/delete">
                                <img class="bin-img" src="/static/images/delete.jpg" alt="bin button">
                            </a>
                        </div>
                        {{/if}}
                    </h3>
                </div>

            </div>

         
            <div class="imgBx">
            
                <img src="{{photo.image}}" alt="post" class="cover">
            </div>



            <div class="bottom">

                <p class="message">
                    <b class="petDescription">{{photo.description}}</b>
                </p>


             
                <div class="pet-details">
                    <p class="petName">Volleyball player: {{photo.name}}</p>
                   
                </div>
                <div class="comments">
                    <div class="comments-top">
                        {{#each photo.commentList}}
                        {{> comment}}
                        {{/each}}
                    </div>
                </div>
            </div>
            {{#if user}}
            {{#unless photo.isOwner}}
            <div class="addComments">
            
                <form method="post" action="/photo/{{photo._id}}/comment">
                    <textarea id="comment-textarea" name="comment" cols="40" rows="10"
                        placeholder="Add comment..."></textarea>
                    
                    <button type="submit">Post</button>
                </form>
            </div>
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div>